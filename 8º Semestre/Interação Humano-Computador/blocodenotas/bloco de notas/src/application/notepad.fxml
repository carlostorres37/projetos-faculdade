<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<BorderPane fx:id="borderPane" xmlns:fx="http://javafx.com/fxml" fx:controller="application.NotepadController">
 <top>
  <MenuBar>
   <menus>
    <Menu text="Arquivo">
     <items>
      <MenuItem text="Novo" fx:id="btnMenuNovo" onAction="#handleNovoAction"></MenuItem>
      <MenuItem text="Abrir" fx:id="btnMenuAbrir" onAction="#handleAbrirAction"></MenuItem>
      <MenuItem text="Salvar" fx:id="btnMenuSalvar" onAction="#handleSalvarAction"></MenuItem>
      <MenuItem text="Salvar Como" fx:id="btnMenuSalvarComo" onAction="#handleSalvarComoAction"></MenuItem>
      <MenuItem text="Sair" fx:id="btnMenuSair" onAction="#handleSairAction"></MenuItem>
     </items>
    </Menu>
    <Menu text="Editar">
     <items>
      <MenuItem text="Desfazer"></MenuItem>
      <MenuItem text="Copiar"></MenuItem>
      <MenuItem text="Colar"></MenuItem>
      <MenuItem text="Excluir"></MenuItem>
      <MenuItem text="Localizar"></MenuItem>
      <MenuItem text="Localizar próximo"></MenuItem>
      <MenuItem text="Substituir"></MenuItem>
      <MenuItem text="Ir para"></MenuItem>
      <MenuItem text="Selecione tudo"></MenuItem>
      <MenuItem text="Hora e data"></MenuItem>
     </items>
    </Menu>
    <Menu text="Formatar">
     <items>
      <MenuItem text="Quebra automática de linha"></MenuItem>
      <MenuItem text="Fonte"></MenuItem>
      <MenuItem text="Negrito"></MenuItem>
      <MenuItem text="Itálico"></MenuItem>
      <MenuItem text="Sublinhado"></MenuItem>
     </items>
    </Menu>
    <Menu text="Ajuda">
     <items>
      <MenuItem text="Ajuda" fx:id="btnMenuAjuda" onAction="#handleAjudaAction"></MenuItem>
      <MenuItem text="Sobre o produto" fx:id="btnMenuSobre" onAction="#handleSobreAction"></MenuItem>
     </items>
    </Menu>
   </menus>
  </MenuBar>
 </top>
 <center>
  <TextArea fx:id="textArea">
  </TextArea>
 </center>
</BorderPane>